#!/usr/bin/env bash
xrandr --output eDP1 --mode 2560x1600
if [ "$(num-connected-screens)" -eq "3" ]; then
    xrandr --output HDMI1 --mode 1920x1200
    xrandr --output HDMI2 --mode 1920x1200
    xrandr --output HDMI3 --mode 1920x1200
    xrandr --output HDMI3 --left-of HDMI1
    xrandr --output HDMI2 --left-of HDMI1
    sleep 5
    xrandr --output eDP1 --pos 1080x1280
fi
if [ "$(num-connected-screens)" -eq "2" ]; then
    xrandr --output HDMI1 --mode 1920x1080
    xrandr --output HDMI1 --right-of eDP1
fi
if [ "$(num-connected-screens)" -eq "1" ]; then
    xrandr --output HDMI1 --off
    xrandr --output HDMI2 --off
    xrandr --output HDMI3 --off
fi
